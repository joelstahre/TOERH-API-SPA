<h1>Create a new application</h1>

<% if @application.errors.any? %>
  <div class="error_messages">
    <% @application.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

<%= form_for @application do |f| %>
  <div class ="text_field">
    <p>
      <%= f.label :app_name, "Application name:" %> <br/>
      <%= f.text_field :app_name %>
    </p>
  </div>
  
  <div class ="text_area">
    <p>
      <%= f.label :app_desc, "Description:" %><br/>
      <%= f.text_area :app_desc %>
    </p>
  </div>

  <div class ="text_field">
    <p>
      <%= f.label :owner_name, "Application owner:" %><br/>
      <%= f.text_field :owner_name %>
    </p>
  </div>

  <div class ="text_field">
    <p>
      <%= f.label :contact_mail, "Email:" %><br/>
      <%= f.text_field :contact_mail %>
    </p>
  </div>

  <%= f.submit "Create" %>
  
<% end %>